{
  "name": "nestjs-boilerplate",
  "version": "1.0.0",
  "scripts1": {
    "build": "nest build",
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "typeorm": "typeorm-ts-node-commonjs -d src/config/typeorm.config.ts",
    "migration:generate1": "npm run typeorm migration:generate ./src/database/migrations/$npm_config_name",
    "migration:run": "npm run typeorm migration:run",
    "migration:revert": "npm run typeorm migration:revert",
    "migration:generate": "node scripts/migration-generate.js",
    "migration:show": "npm run typeorm migration:show"
  },
  "scripts": {
    "build": "nest build",
    "postbuild": "npm run build:migrations",
    "build:migrations": "tsc --project tsconfig.migrations.json",
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    
    "migration:generate": "node scripts/migration-generate.js",
    "migration:run:dev": "npx typeorm-ts-node-commonjs -d src/config/typeorm.config.ts migration:run",
    "migration:run:prod": "npx typeorm -d dist/config/typeorm.config.js migration:run",
    "migration:run": "if [ \"$NODE_ENV\" = \"production\" ]; then npm run migration:run:prod; else npm run migration:run:dev; fi",
    
    "railway:deploy": "npm run build && npm run migration:run:prod"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/typeorm": "^10.0.0",
    "@types/multer": "^2.0.0",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "fuse.js": "^7.1.0",
    "multer": "^2.0.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.10.0",
    "qrcode": "^1.5.4",
    "axios": "^1.13.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "swagger-ui-express": "^4.6.3",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.19.25",
    "@types/passport-jwt": "^4.0.1",
    "@types/qrcode": "^1.5.6",
    "@types/uuid": "^10.0.0",
    "axios": "^1.13.2",
    "eslint": "^8.40.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
