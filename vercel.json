{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**", "uploads/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "api/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/health",
      "dest": "api/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/api/docs",
      "dest": "api/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/api/v1/(.*)",
      "dest": "api/index.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.js"
    }
  ]
}