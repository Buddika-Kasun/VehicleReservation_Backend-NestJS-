# ==================== APPLICATION ====================
NODE_ENV=development
PORT=3000
HOST=localhost

# ==================== DATABASE ====================
# Option 1: Use DATABASE_URL (recommended for production/cloud deployments)
DATABASE_URL=postgresql://username:password@localhost:5432/vrapp_db

# Option 2: Use individual connection parameters (for local development)
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=postgres
# DB_PASS=postgres
# DB_NAME=vrapp_db

# ==================== JWT AUTHENTICATION ====================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# ==================== REDIS ====================
# Option 1: Use REDIS_URL (recommended)
REDIS_URL=redis://localhost:6379

# Option 2: Use individual parameters
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# ==================== FIREBASE (Push Notifications) ====================
# Path to your Firebase service account JSON file
FIREBASE_CREDENTIALS_PATH=./config/firebase-service-account.json

# ==================== WEBSOCKET ====================
WS_PORT=3000
WS_PATH=/socket.io

# ==================== CORS ====================
# Comma-separated list of allowed origins (for production)
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# ==================== FILE UPLOADS ====================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# ==================== LOGGING ====================
LOG_LEVEL=debug

# ==================== OPTIONAL: EXTERNAL SERVICES ====================
# Add any third-party API keys here
# GOOGLE_MAPS_API_KEY=your-google-maps-key
# TWILIO_ACCOUNT_SID=your-twilio-sid
# TWILIO_AUTH_TOKEN=your-twilio-token
